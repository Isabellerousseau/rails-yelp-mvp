<div class="container">
  <div class="row">
    <div class="col-6 offset-3">

<h1>Add a new restaurant</h1>
<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, placeholder: 'Restaurant name please', error: 'Restaurant name is mandatory, please specify one' %>
  <%= f.input :address %>
  <%= f.input :phone_number, placeholder: 'enter a valid phone number' %>
  <%= f.input :category, collection: Restaurant::CATEGORY %>
  <div class="btn btn-primary">
  <%= f.button :submit %>
  </div>
<% end %>

<%= link_to "cancel", restaurants_path %>
    </div>
  </div>
</div>
