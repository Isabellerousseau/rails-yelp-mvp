<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h1>Create a review</h1>

      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5]%>

      <%= f.submit %>

      <% end %>
    </div>
  </div>
</div>
